    "@supabase/supabase-js": "^2.45.1",
    "@t3-oss/env-nextjs": "^0.9.2",
    "@tanstack/react-query": "^5.51.23",
    "@trpc/client": "next",
    "@trpc/react-query": "next",
    "@trpc/server": "next",
    "bootstrap": "^5.3.3",
    "clsx": "^2.1.1",
