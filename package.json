    "sass": "^1.77.8",
    "server-only": "^0.0.1",
    "slugify": "^1.6.6",
    "superjson": "^2.2.1",
    "swiper": "^10.3.1",
    "unsplash-js": "^7.0.19",
    "validator": "^13.12.0",
    "yup": "^1.4.0",
    "zod": "^3.23.8"
  },
  "devDependencies": {
    "@commitlint/cli": "^16.3.0",
    "@commitlint/config-conventional": "^16.2.4",
    "@svgr/webpack": "^8.1.0",
    "@testing-library/jest-dom": "^5.17.0",
    "@testing-library/react": "^13.4.0",
    "@types/lodash": "^4.17.7",
